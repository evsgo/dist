block config
  include partials/_config

//- Extends template page
doctype html
html(class="no-js" lang="ru")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    block title
    = pad

    // Disable tap highlight on IE
    meta(name='msapplication-tap-highlight', content='no')
    = pad

    // Web Application Manifest
    link(rel='manifest', href='manifest.json')
    = pad

    // Add to homescreen for Chrome on Android
    meta(name='mobile-web-app-capable', content='yes')
    meta(name='application-name', content=descrPage)
    link(rel='icon', sizes='192x192', href=pathTouch + 'chrome-touch-icon-192x192.png')
    = pad

    // Add to homescreen for Safari on iOS
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    meta(name='apple-mobile-web-app-title', content=appleTitle)
    link(rel='apple-touch-icon', href=pathTouch + 'apple-touch-icon.png')
    = pad

    // Tile icon for Win8 (144x144 + tile color)
    meta(name='msapplication-TileImage', content=pathTouch + 'ms-touch-icon-144x144-precomposed.png')
    meta(name='msapplication-TileColor', content=msappColor)
    = pad

    // Color the status bar on mobile devices
    meta(name='theme-color', content=themeColor)
    = pad

    // SEO: If your mobile URL is different from the desktop URL, add a canonical link to the desktop page https://developers.google.com/webmasters/smartphone-sites/feature-phones
    // <link rel="canonical" href="http://www.example.com/">
    = pad

    //- Extends for styles
    block style
      include partials/_head
    = pad

    block tools
      include partials/_tools

  body
    = padx2
      include ../images/symbols.svg

      block header
      = padx2

      block content
      = padx2

      block footer
    = padx2


    //- Extends for scripts
    block scripts
      include partials/_scripts
      = pad

